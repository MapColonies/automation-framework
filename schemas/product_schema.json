{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "price": {
            "type": "number",
            "minimum": 0
        },
        "stock": {
            "type": "integer",
            "minimum": 0
        }
    },
    "required": ["id", "name", "description", "price", "stock"],
    "additionalProperties": false
}
